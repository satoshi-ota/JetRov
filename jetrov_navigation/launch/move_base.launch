<launch>
  <arg name="odom_frame_id"   default="odom"/>
  <arg name="base_frame_id"   default="base_footprint"/>
  <arg name="global_frame_id" default="map"/>
  <arg name="odom_topic" default="odom" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find jetrov_navigation)/param/move_base/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find jetrov_navigation)/param/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find jetrov_navigation)/param/move_base/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find jetrov_navigation)/param/move_base/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find jetrov_navigation)/param/move_base/base_local_planner_params.yaml" command="load"/>
    <rosparam file="$(find jetrov_navigation)/param/move_base/move_base_params.yaml" command="load"/>
    <rosparam file="$(find jetrov_navigation)/param/move_base/global_planner_params.yaml" command="load" />
    <rosparam file="$(find jetrov_navigation)/param/move_base/navfn_global_planner_params.yaml" command="load" />


    <!-- reset frame_id parameters using user input data -->
    <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>

  </node>
</launch>
